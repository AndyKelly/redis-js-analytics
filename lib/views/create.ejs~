<script type="text/javascript">
  $(document).ready(function() {
    $('.multiselect').multiselect({
        enableFiltering: true,
        filterPlaceholder: 'Search'
    });
  });




var _URL = window.URL || window.webkitURL;

var fileControl = $("#exampleInputFile");

fileControl.change(function(e) {
    var file, img;


    if ((file = this.files[0])) {
        img = new Image();
        img.onload = function() {
            if(this.width > 350 || this.height > 350){
                console.log('Image too large ' + this.width + this.height)
                fileControl.replaceWith( fileControl = fileControl.clone( true ) );
            }else{
                console.log('Image size is ok')
            }
        };
        img.onerror = function() {
            alert( "not a valid file: " + file.type);
            fileControl.replaceWith( fileControl = fileControl.clone( true ) );
        };
        img.src = _URL.createObjectURL(file);


    }

});
</script>

